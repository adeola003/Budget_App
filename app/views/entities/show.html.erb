<!-- app/views/entities/show.html.erb -->
<div class="entity-details">
  <h1><%= @entity.name %></h1>
  <p>Amount: $<%= @entity.amount %></p>
  <p>This transaction was created on: <%= @entity.created_at.strftime('%B %d, %Y') %></p>
  <div class="actions">
    <%= link_to 'Edit', edit_group_entity_path(@group, @entity), class: 'edit-button' %>
    <%= link_to 'Back', group_path(@group), class: 'back-button' %>
  </div>
</div>
