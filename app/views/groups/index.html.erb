<div class="groups-list">
  <% @groups.each do |group| %>
    <div class="group-item">
      <img class="group-icon" src="<%= group.icon %>" alt="Group Icon">
      <div class="group-details">
        <h2 class="group-name"><%= link_to group.name, group_path(group) %></h2>
        <div class="group-actions">
          <%= link_to 'Edit', edit_group_path(group), class: "edit-button" %>
          <%= button_to 'Delete', group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
          <p class="total-amount">Total transactions: $<%= group.total_amount %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

