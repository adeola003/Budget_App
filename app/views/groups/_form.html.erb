<%= form_with(model: @group, url: @group.persisted? ? group_path(@group) : groups_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :icon %>
    <%= form.text_field :icon %>
  </div>
  <div class="actions">
    <%= form.submit 'Save' %>
  </div>
<% end %>
