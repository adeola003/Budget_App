<h1 class="page-title"> Transactions for <%= @group.name %> Category</h1>

<div class="transactions-list">
  <% @entities.each do |entity| %>
    <div class="transaction-item">
      <div class="transaction-info">
        <h3 class="entity-name"><%= link_to entity.name, group_entity_path(@group, entity) %></h3>
        <p class="entity-amount">$<%= entity.amount %></p>
      </div>
      <div class="transaction-actions">
        <%= button_to 'Delete', group_entity_path(@group, entity), method: :delete, data: { confirm: 'Are you sure you want to delete this transaction?' }, class: 'delete-button' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add a New Transaction', new_group_entity_path(@group), class: 'add-transaction-button' %>
<%= link_to 'Back', groups_path, class: 'back-link' %>
